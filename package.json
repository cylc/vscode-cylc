{
    "name": "vscode-cylc",
    "displayName": "Cylc",
    "version": "1.2.0",
    "publisher": "cylc",
    "description": "VSCode language support for Cylc workflow configuration files",
    "repository": {
        "type": "git",
        "url": "https://github.com/cylc/vscode-cylc.git"
    },
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "license": "GPL-3.0",
    "icon": "img/cylc-logo.png",
    "contributes": {
        "languages": [
            {
                "id": "cylc",
                "aliases": [
                    "Cylc",
                    "cylc"
                ],
                "extensions": [
                    ".cylc",
                    ".cylc.processed"
                ],
                "filenamePatterns": [
                    "*suite*.rc",
                    "suite*.rc.*",
                    "flow.rc",
                    "flow-tests.rc"
                ],
                "configuration": "./cylc.language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cylc",
                "scopeName": "source.cylc",
                "path": "./syntaxes/cylc.tmLanguage.json",
                "embeddedLanguages": {
                    "source.jinja": "jinja"
                }
            }
        ],
        "snippets": [
            {
                "language": "cylc",
                "path": "./cylc-snippets.json"
            }
        ]
    }
}
